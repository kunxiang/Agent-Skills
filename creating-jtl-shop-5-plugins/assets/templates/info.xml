            <Widget sort="1">
                <Name>Plugin-Statistiken</Name>
                <Description>Zeigt Plugin-Statistiken im Dashboard</Description>
                <Container>center</Container>
                <Class>StatsWidget</Class>
            </Widget>
        </AdminWidgets>
        -->
        <!-- Container: center, left, right -->

        <!-- ======================= -->
        <!-- OPC PORTLETS            -->
        <!-- ======================= -->
        <!--
