            <Cron>
                <Name>Tägliche Synchronisation</Name>
                <Description>Synchronisiert Daten mit externem Service</Description>
                <Filename>sync_cron.php</Filename>
                <Interval>24</Interval>
                <IntervalType>H</IntervalType>
            </Cron>
        </Crons>
        -->
        <!-- IntervalType: M (Minuten), H (Stunden), D (Tage) -->

        <!-- ======================= -->
        <!-- DASHBOARD-WIDGETS       -->
        <!-- ======================= -->
        <!--
