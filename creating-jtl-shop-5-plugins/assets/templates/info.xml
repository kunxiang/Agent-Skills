                <Purpose>Analyse</Purpose>
                <Company>Tracking GmbH</Company>
                <PrivacyPolicy>https://tracking.example.com/privacy</PrivacyPolicy>
            </Vendor>
        </ConsentManager>
        -->

        <!-- ======================= -->
        <!-- MAIL-TEMPLATES          -->
        <!-- ======================= -->
        <!--
