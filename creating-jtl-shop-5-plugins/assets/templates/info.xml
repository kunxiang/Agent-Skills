            <Portlet>
                <Name>Mein Portlet</Name>
                <Class>MeinPortlet</Class>
            </Portlet>
        </Portlets>
        -->

        <!-- ======================= -->
        <!-- CONSENT MANAGER         -->
        <!-- (Für Tracking/Cookies)  -->
        <!-- ======================= -->
        <!--
