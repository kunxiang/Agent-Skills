<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="my_model_line_view_tree" model="ir.ui.view">
        <field name="name">my.model.line.tree</field>
        <field name="model">my.model.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="parent_id"/>
                <field name="sequence" widget="handle"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="subtotal" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="my_model_line_view_form" model="ir.ui.view">
        <field name="name">my.model.line.form</field>
        <field name="model">my.model.line</field>
        <field name="arch" type="xml">
            <form string="Line">
                <sheet>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="product_id"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="subtotal"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
